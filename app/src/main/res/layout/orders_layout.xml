<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:padding="10dp">

            <!-- Username  -->
            <TextView
                android:id="@+id/order_user_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/order_user_name"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@android:color/darker_gray" />

            <!-- Phone Number  -->
            <TextView
                android:id="@+id/order_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="Phone Number"
                android:textColor="@color/colorPrimaryDark" />

            <!-- Total Price  -->
            <TextView
                android:id="@+id/order_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_phone_number"
                android:layout_marginTop="10dp"
                android:text="Total Price"
                android:textColor="@color/colorPrimaryDark" />

            <!-- Address, City  -->
            <TextView
                android:id="@+id/order_address_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_total_price"
                android:layout_marginTop="10dp"
                android:text="Address, City"
                android:textColor="@color/colorPrimaryDark" />

            <!-- Date time  -->
            <TextView
                android:id="@+id/order_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_address_city"
                android:layout_marginTop="10dp"
                android:text="Date Time"
                android:textColor="@color/colorPrimaryDark" />

            <!-- See Detail Button  -->
            <Button
                android:id="@+id/show_all_product_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm_btn"
                android:layout_marginTop="12dp"
                android:background="@drawable/buttons2"
                android:text="SEE DETAIl"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                app:backgroundTint="@color/white" />

            <!-- Confirm Button  -->
            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_date_time"
                android:layout_marginTop="24dp"
                android:background="@android:color/white"
                android:text="CONFIRM"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"


                />

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>